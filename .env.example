# API Environment Variables (for Cloudflare Workers)
# Add these to your wrangler.toml or Cloudflare dashboard

# JWT Secret for authentication
JWT_SECRET=your-secret-key-here

# Salt rounds for password hashing
SALT_ROUND=10

# Resend API Key for emails
RESEND_API_KEY=your-resend-api-key

# Paystack Keys
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# R2 (file storage)
R2_PUBLIC_BASE_URL=https://ajebo-camp-media.r2.dev

# UI Environment Variables
# Create .env.local in /ui directory with these:
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
NEXT_PUBLIC_API_BASE_URL=http://localhost:6001
