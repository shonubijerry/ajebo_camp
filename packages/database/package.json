{
  "name": "@ajebo_camp/database",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "npm run migration:apply && npm run prisma:generate && wrangler dev --persist-to .local_db",
    "start": "wrangler dev --persist-to .local_db",
    "prisma:generate": "prisma generate",
    "migration:create": "wrangler d1 migrations create ajebo-camp-dev-db $NAME",
    "migration:list": "wrangler d1 migrations list ajebo-camp-dev-db --local",
    "migration:apply": "echo y | wrangler d1 migrations apply ajebo-camp-dev-db --persist-to .local_db --local",
    "migrate:prisma": "npx prisma migrate diff --from-empty --to-schema ./prisma/schema.prisma --script --output",
    "test": "vitest",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@ajebo_camp/shared": "*",
    "@cloudflare/vitest-pool-workers": "^0.7.5",
    "@cloudflare/workers-types": "^4.20250421.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.1.0",
    "prisma-json-types-generator": "^4.0.0-beta.2",
    "typescript": "^5.5.2",
    "vitest": "~3.0.7",
    "wrangler": "^4.12.0"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "zod": "^3.22.3"
  }
}
