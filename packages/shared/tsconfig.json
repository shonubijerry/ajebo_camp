{
  "compilerOptions": {
    "noEmit": true,
    "module": "es2022",
    "target": "es2021",
    "lib": ["es2021"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
