{
  "name": "ajebo_camp",
  "version": "1.0.0",
  "description": "Fullstack application for Ajebo Camp",
  "main": "index.js",
  "author": "shonubijerry <shonubijerry@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier  --config .prettierrc --write '*.{json,js}' 'src/**/*.{js,ts}'",
    "lint": "eslint . --max-warnings 0 --fix",
    "dev": "concurrently --kill-others -n 'DB,API' -c 'yellow,blue,green' 'cd packages/database && npm run dev' 'cd api && npm run dev'"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "5.9.3"
  },
  "workspaces": [
    "packages/*",
    "api",
    "ui"
  ]
}
