{
	"name": "@ajebo_camp/api",
	"description": "API for Ajebo Camp",
	"private": true,
	"scripts": {
		"build": "wrangler deploy --dry-run --outdir dist --env staging",
		"dev": "wrangler dev --port 6001 --test-scheduled  --persist-to ../packages/database/.local_db",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint . --max-warnings 0 --fix --ext .js,.jsx,.ts,.tsx",
		"migration": "cd ../packages/database && npm run migration:apply",
		"cf-typegen": "wrangler types --include-env false",
		"schema": "npx chanfana"
	},
	"dependencies": {
		"@ajebo_camp/database": "*",
		"@hono/zod-openapi": "^0.9.10",
		"@prisma/adapter-d1": "^7.2.0",
		"chanfana": "2.8.3",
		"hono": "4.10.7",
		"prettier-plugin-organize-imports": "^4.3.0",
		"resend": "^6.6.0",
		"toucan-js": "4.1.1",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.10.11",
		"@types/node": "24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.53.1",
		"@typescript-eslint/parser": "^8.53.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"wrangler": "^4.53.0"
	}
}
